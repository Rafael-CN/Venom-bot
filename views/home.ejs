<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.socket.io/4.5.3/socket.io.min.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.6.1.min.js"
      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
      crossorigin="anonymous"
    ></script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
      rel="stylesheet"
    />

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whatsapp - Bot</title>
  </head>
  <body>
    <div class="container">
      <div class="row mb-2 mt-3">
        <div id="status" class="alert alert-dark" role="alert">
          <span>Inicializando cliente whatsapp... </span>
        </div>
      </div>

      <section id="formulario_mensagem">
        <div class="row">
          <div class="col-1">
            <select
              id="pais"
              class="form-select form-select-lg mb-3"
              aria-label=".form-select-lg example"
            >
              <option value="55">BR</option>
            </select>
          </div>
          <div class="col-1">
            <select
              id="regiao"
              class="form-select form-select-lg mb-3"
              aria-label=".form-select-lg example"
            >
              <option value="53">RS</option>
            </select>
          </div>
          <div class="col-2">
            <input
              id="telefone"
              class="form-control form-control-lg"
              type="text"
              placeholder="Telefone"
              aria-label=".form-control-lg example"
            />
          </div>
          <div class="col-6">
            <input
              id="mensagem"
              class="form-control form-control-lg"
              type="text"
              placeholder="Mensagem"
              aria-label=".form-control-lg example"
            />
          </div>
          <div class="col-2">
            <button
              id="enviarMsg"
              type="button"
              class="btn btn-lg btn-success"
              onclick="sendMsg()"
              disabled
            >
              Enviar mensagem
            </button>
          </div>
        </div>

        <div class="row mt-4">
          <div class="col-8">
            <div>
              <input
                class="form-control form-control-lg"
                id="anexo"
                type="file"
                onchange="saveFile()"
              />
            </div>
          </div>
          <div class="col">
            <button
              id="removerArquivo"
              class="btn btn-outline-danger rounded-circle btn-lg d-none"
              onclick="removeFile()"
            >
              <i class="fa-solid fa-times"></i>
            </button>
          </div>
        </div>
      </section>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      <div
        id="msgToast"
        class="toast align-items-center text-bg-success border-0"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="d-flex">
          <div class="toast-body">Mensagem enviada com sucesso!</div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
    </div>

    <div class="toast-container position-fixed bottom-0 start-0 p-3">
      <div
        id="newToast"
        class="toast"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="toast-header">
          <img src="#" class="rounded me-2" alt="" style="max-width: 20px" />
          <strong class="me-auto">Contato</strong>
          <small>00:00:00</small>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
        <div class="toast-body">
          <span>Mensagem</span>
          <div class="mt-3 pt-2 border-top d-flex justify-content-end d-none">
            <a
              href="http://127.0.0.1:8000/files/1666222631680.jpeg"
              download="arquivo"
              target="_blank"
              class="btn btn-outline-success ml-auto btn-sm"
            >
              <i class="fa-solid fa-arrow-down"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </body>

  <script>
    jQuery.fn.removeClassStarts = function (startName) {
      $(this).removeClass(function (index, className) {
        return (
          className.match(new RegExp(`(^|\\s)${startName}\\S+`, "g")) || []
        ).join(" ");
      });
    };

    const socket = io("http://localhost:3001");
    socket.on("connection");

    socket.on("created", (data) => {
      $("#status")
        .text(data)
        .removeClass("alert-dark")
        .addClass("alert-success");

      $("#enviarMsg").removeAttr("disabled");
    });

    function disableMsg(disabled) {
      $("#formulario_mensagem")
        .find("input, button, select")
        .attr("disabled", disabled);
    }

    function sendMsg() {
      disableMsg(true);

      const telefone =
        $("#pais").val() + $("#regiao").val() + $("#telefone").val();

      socket.emit("sendMsg", telefone, $("#mensagem").val(), (data) => {
        showMsgToast("A mensagem foi enviada com sucesso", "success");
        disableMsg(false);
      });
    }

    function showMsgToast(msg, type) {
      $("#msgToast").removeClassStarts("text-bg-");

      $("#msgToast .toast-body").text(msg);
      $("#msgToast").addClass("text-bg-" + type);

      new bootstrap.Toast($("#msgToast")).show();
    }

    function verifyFile(file) {
      if (file.size / 10 ** 6 > 16) {
        $("#anexo").addClass("is-invalid");
        showMsgToast(
          "O arquivo ultrapassa o limite do whatsapp de 16mb",
          "danger"
        );
        return false;
      } else {
        $("#anexo").removeClass("is-invalid");
        return true;
      }
    }

    function saveFile() {
      const file = document.querySelector("input[type=file]").files[0];

      if (file !== undefined) {
        if (!verifyFile(file)) return;

        socket.emit("createFile", file.type);

        let startPointer = 0;
        let endPointer = file.size;

        while (startPointer < endPointer) {
          let newStartPointer = startPointer + 1024 * 10;

          socket.emit(
            "sendChunks",
            file.type,
            file.slice(startPointer, newStartPointer)
          );

          startPointer = newStartPointer;
        }

        $("#removerArquivo").removeClass("d-none");
      }
    }

    function removeFile() {
      socket.emit("removeFile");
      $("#anexo").val("");
      $("#removerArquivo").addClass("d-none");
    }

    socket.on("newMsg", (msg) => {
      console.log(msg);
      $("#newToast img").attr("src", msg.sender.profilePicThumbObj.eurl);
      $("#newToast .toast-header strong").text(msg.sender.displayName);

      const date = new Date(msg.timestamp * 1000);
      $("#newToast .toast-header small").text(date.toLocaleTimeString());

      if (!(msg.mimetype === undefined)) {
        $("#newToast .toast-body div").removeClass("d-none");
        $("#newToast .toast-body div a").attr(
          "href",
          "http://127.0.0.1:8000" + msg.mediaPath
        );

        $("#newToast .toast-body span").text("Arquivo üìÅ");
      } else {
        $("#newToast .toast-body div").addClass("d-none");
        $("#newToast .toast-body span").text(msg.body);
      }

      const newToast = document.getElementById("newToast");
      new bootstrap.Toast(newToast).show();
    });
  </script>
</html>
